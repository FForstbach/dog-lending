<%= simple_form_for([ @request, Message.new ], remote: true, url: request_messages_path(@request, format: :js))  do |form| %>
  <%= form.input :content, placeholder: "Type your message!" %>
  <% hidden_field_tag "user_id", current_user.id %>
  <% hidden_field_tag "request_id", @request.id %>
  <%= form.button :submit, id:"btn btn-primary" %>
<% end %>
