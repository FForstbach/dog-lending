<div id="map" style="width: 100%; height: 300px;">
</div>
<h1 class="text-center">Pick Your Dog</h1>
<div class="container">
  <div class="row">
  <%  @dogs.each do |dog| %>
    <div class="col-xs-12 col-sm-4">
      <!-- insert <div class="card"> -->
      <% if dog.photo.presence %>
        <div class="card" style="background-image: linear-gradient(rgba(100,100,100,0.4), rgba(150,150,150,0.2)), url('<%= cl_image_path dog.photo_url, crop: :fill %>");>
      <% elsif %>
        <div class="card" style="background-image: linear-gradient(rgba(100,100,100,0.4), rgba(150,150,150,0.2)), url('https://static.pexels.com/photos/7720/night-animal-dog-pet.jpg');">
      <% end %>
        <div class="card-category">Popular</div>
        <div class="card-description">
          <h2><%= link_to dog.name, dog_path(dog) %></h2>
          <p><%= dog.breed %></p>
          <p><%= dog.location %></p>
        </div>
        <img class="card-user avatar" src="http://www.fillmurray.com/g/60/60">
        <a class="card-link" href="#" ></a>
      </div>
    </div>
    <% end %>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    var map_markers = <%= raw @hash.to_json %>;
  <% end %>
<% end %>
