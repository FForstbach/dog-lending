<div class="banner small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path "dogbanner_sc5jqh" %>');">
  <div class="banner-content">
      <%= cl_image_tag "Waumessenger_ng4oat", class: "avatar-show" %>
  </div>
</div>



<div class="container_messages">

  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= render "requests/info" %>
      </div>


    <div class="col-xs-12 col-md-8">
      <div class="request-form text-center">
      <% if current_user == @request.user %>
        <p><%= cl_image_tag "waumessenger_fav_i5qjox", class: "waumessage_img" %> You are speaking to <%= @dog.user.first_name %> <%= @dog.user.last_name %>
      <% else %>
        <p><%= cl_image_tag "waumessenger_fav_i5qjox", class: "waumessage_img" %> You are speaking to <%= @request.user.first_name %> <%= @request.user.last_name %>
      <% end %>
        <div class="message-info">
          <div class="col-xs-12-show">
            <div id="all-messages">

              <%  @request_messages.each do |message| %>
                  <%= render "messages/message", message: message %>
              <% end %>
              <hr>
            </div>
            <%= render "messages/form" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

