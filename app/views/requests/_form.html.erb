<%= simple_form_for([ @request, @message ], remote: true)  do |form| %>
  <%= form.input :content, placeholder: "Type your message!" %>
  <% hidden_field_tag "user_id", current_user.id %>
  <% hidden_field_tag "request_id", @request.id %>
  <%= form.button :submit, id:"btn btn-primary" %>
<% end %>
